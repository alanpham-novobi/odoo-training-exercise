<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_request_approve_view_wizard" model="ir.ui.view">
        <field name="name">sale.request.approve.wizard</field>
        <field name="model">sale.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Approve Request Sale">
                <p class="oe_grey">
                    Only request of state pending will be approved. You want to approve all of them?
                </p>
                <footer>
                    <button string="Confirm" name="approve_request" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sale_request_approve_view_wizard_action" model="ir.actions.act_window">
        <field name="name">Approve Request</field>
        <field name="res_model">sale.request.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="novobi_sales_b2b.sale_request_approve_view_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>